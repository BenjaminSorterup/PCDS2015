<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.pcds.care2reuse.Post"
    android:background="#FFFFFF"
    android:gravity="center">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:id="@+id/textView2"
        android:background="#ff0a7062"
        android:height="50dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView3"
        android:background="#ff0a7062"
        android:height="50dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:id="@+id/imageView3"
        android:src="@mipmap/profilegreen"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@mipmap/postbutton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:onClick="createMSG"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageButton3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postET"
        android:hint="What are you posting?"
        android:background="@null"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:background="@mipmap/camera"
        android:id="@+id/button1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/postimg"
        android:layout_alignTop="@+id/button1"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postgallery"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1">

        <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:orientation="horizontal"
            android:id= "@+id/horizontal">
           </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/postimg2"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@+id/postimg"
        android:layout_toRightOf="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton3" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/postimg3"
        android:layout_alignTop="@+id/postimg2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
