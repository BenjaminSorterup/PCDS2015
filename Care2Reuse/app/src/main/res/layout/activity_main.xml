<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/app_name"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/topBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff0a7062" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#ff0a7062"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/topBox"
        android:layout_alignStart="@+id/topBox"
        android:layout_alignRight="@+id/topBox"
        android:layout_alignEnd="@+id/topBox"
        android:id="@+id/bottomBox" />

    <ImageButton
        android:text="@string/title_activity_information"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toInfopage"
        android:id="@+id/imageButton"
        android:src="@mipmap/info"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/topBox"
        android:layout_alignEnd="@+id/topBox"
        android:layout_alignBottom="@+id/topBox" />

    <ImageButton
        android:text="@string/title_activity_settings"
        android:background="@mipmap/settings2x"
        android:layout_width="45dip"
        android:layout_height="30dip"
        android:onClick="toSettings"
        android:id="@+id/imageButton2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/topBox"
        android:layout_alignStart="@id/topBox"
        android:layout_alignBottom="@+id/topBox"/>


    <Button
        android:text="@string/title_activity_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toPost"
        android:id="@+id/button4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/title_activity_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toProfile"
        android:id="@+id/button3"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <fragment
        android:name="com.example.christian.care2reuse.loginFragment"
        android:id="@+id/loginFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
