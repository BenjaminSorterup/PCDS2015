<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content"     android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="#FFFFFF"
    tools:context="com.example.christian.care2reuse.Profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:gravity="center"
        android:id="@+id/topBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff0a7062" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#ff0a7062"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/topBox"
        android:layout_alignStart="@+id/topBox"
        android:layout_alignRight="@+id/topBox"
        android:layout_alignEnd="@+id/topBox"
        android:id="@+id/bottomBox" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:id="@+id/imageView3"
        android:src="@mipmap/profilegreen"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/topBox"
        android:layout_above="@+id/bottomBox" />

</RelativeLayout>
