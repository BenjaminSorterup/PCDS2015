<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="#FFFFFF"
    tools:context="com.pcds.care2reuse.Infopage">

   //Borders
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/title_activity_information"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/topBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff0a7062" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#ff0a7062"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/topBox"
        android:layout_alignStart="@+id/topBox"
        android:layout_alignRight="@+id/topBox"
        android:layout_alignEnd="@+id/topBox"
        android:id="@+id/bottomBox" />

    <TextView
        android:autoLink="all"
        android:linksClickable="true"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/InnoAidinfo"
        android:id="@+id/InnoAid"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/postbutton"
        android:layout_above="@+id/InnoAid"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
